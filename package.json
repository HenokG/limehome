{
  "name": "limehome",
  "version": "1.0.0",
  "description": "limehome typescript challenge",
  "main": "src/www.ts",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:HenokG/lime.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HenokG/limehome/issues"
  },
  "homepage": "https://github.com/HenokG/limehome#readme",
  "scripts": {
    "prepare": "husky install",
    "start": "ts-node-dev --transpile-only --respawn src/www.ts",
    "start:dev": "ts-node-dev --transpile-only --respawn --inspect=4321 src/www.ts",
    "build": "tsc",
    "prettier": "prettier -c .",
    "lint": "eslint --config .eslintrc.yml --ignore-path .eslintignore **/*.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand --detectOpenHandles"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --config .eslintrc.yml --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "mikro-orm": {
    "useTsNode": true
  },
  "dependencies": {
    "@mikro-orm/core": "^5.7.14",
    "@mikro-orm/migrations": "^5.7.14",
    "@mikro-orm/sqlite": "^5.7.14",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pino": "^8.15.0",
    "sqlite": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.5.4",
    "@types/moment": "^2.13.0",
    "@types/node": "^18.11.17",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "babel-jest": "^29.6.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "moment": "^2.29.4",
    "pino-pretty": "^10.2.0",
    "prettier": "2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
